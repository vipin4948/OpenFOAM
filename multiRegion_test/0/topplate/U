FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0/topplate";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0.01 0 0);

boundaryField
{
    topwall
    {
        type            calculated;
        value           uniform (0.01 0 0);
    }
    leftwall
    {
        type            calculated;
        value           uniform (0.01 0 0);
    }
    rightwall
    {
        type            calculated;
        value           uniform (0.01 0 0);
    }
    frontface
    {
        type            calculated;
        value           uniform (0.01 0 0);
    }
    backface
    {
        type            calculated;
        value           uniform (0.01 0 0);
    }
    topplate_to_air
    {
        type            calculated;
        value           uniform (0 0 0);
    }
}


